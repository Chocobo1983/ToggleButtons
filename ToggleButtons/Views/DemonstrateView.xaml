<Window x:Class="ToggleButtons.DemonstrateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToggleButtons"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToggleButton Width="150" Height="150" Margin="50" Style="{DynamicResource FirstButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ToggleButton Style="{DynamicResource SecondButtonStyle}" Width="180" Height="50" />
    </Grid>
</Window>
